@using WinMonitorApp.Models

<span style="float:left; font-size:larger; font-weight:500; margin-left:10px; margin-top:20px;">Account</span>
<button class = "btn btn-link btn-lg" style="float:right; color: #67747c; margin-right:10px;" id="btnmodal" onclick="addAccountCompanyDashboard()"> 
       Add Account
</button>
<br><br><hr /><br>
<div class="table-responsive">
<table class=" table table-hover CompanyDashboardTable" id="companytable">                                                                 <!-- Company Table-->
    
    <thead>
        <tr>
            <td>
                Select
            </td>
            <td>
                Account#
            </td>
            <td>
                Name
            </td>
            <td>
                URL
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var CompanyObj in Model)
        {
            <tr style="font-size:medium; font-weight:500; color:black;">
                <td ><input type="radio" name="radioCompanySelect"/></td>
                 <td id="RazorCompanyId" >@CompanyObj.DBCompanyId</td>
                 <td id="RazorCompanyName" >@CompanyObj.DBCompanyName</td>
                 <td id="RazorURL" >@CompanyObj.DBURL</td>
            </tr>
        }
    </tbody>
</table>
</div>
<br /><br />

<!--to add custom.js functions after body load-->
<script src="~/Scripts/custom.js"></script>


<!--modal-->
   <div class = "modal fade" id = "addCompanyAccountModal" tabindex = "-1" role = "dialog" aria-labelledby = "addCompanyAccountModalLabel" aria-hidden = "true" >
                <div class = "modal-dialog">
                    <div class = "modal-content">
                        
                        <!--dialog box header-->
                        <div class = "modal-header">
                            
                             <!--dialog box close button-->
                            <button type = "button" class = "close" data-dismiss = "modal" aria-hidden = "true">
                                &times;
                            </button>
            
                            <!--dialog box label--> 
                            <h4 class = "modal-title" id = "addCompanyAccountModalLabel" style="color:#0067BB;">
                                 <b>Company Account</b>
                             </h4>
                     </div>
         
                <!--dialog box body-->
                <div class = "modal-body">
                     <form>
                         <div class="row">
                            <div class="col-sm-4" style="text-align:left;">
                                <span>Company Name</span>
                            </div>  
                             <div class="col-sm-8" style="text-align:left;">
                                <input type="text" id="CompanyName"/>
                            </div>
                        </div>
                         <br />
                         <div class="row">
                             <div class="col-sm-4" style="text-align:left;">
                                 <span>URL</span>
                             </div>
                             <div class="col-sm-8" style="text-align:left;">                        
                                 <input type="url"  id="CompanyURL"/>                                   <!--regex here-->
                             </div>
                         </div>    
                     </form>
                 </div>
         
                <!--dialog box footer-->
                <div class = "modal-footer">
                    <!--dialog box add component button-->
                        <button type = "button" class = "btn btn-primary" data-dismiss="modal" id="btnaddCompany" onclick="addCompanyToDbAndView()">
                           Add
                        </button>

                        <!--dialog box Close Button-->
                        <button type = "button" class = "btn btn-default" data-dismiss = "modal">
                           Close
                        </button>
                </div>
            </div>                                                
        </div>                                               
    </div>                                                      
            
